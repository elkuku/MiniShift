#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

define('ROOT', realpath(__DIR__ . '/..'));

use MiniShift\Command\CreateProjectCommand;
use MiniShift\Command\DeleteProjectCommand;
use Symfony\Component\Console\Application;

$application = new Application('MiniShift Console', 0.1);

$application->add(new CreateProjectCommand());
$application->add(new DeleteProjectCommand());
$application->add(new \MiniShift\Command\ListProjectsCommand());

$application->run();
