#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

define('ROOT', realpath(__DIR__.'/..'));

use Symfony\Component\Console\Application;

$application = new Application('MiniShift Console', 0.1);

foreach (new DirectoryIterator(__DIR__.'/Console/Command') as $item) {
    if ($item->isDot()) {
        continue;
    }

    $class = 'MiniShift\Console\Command\\'.substr($item->getFilename(), 0, -4);
    $application->add(new $class);
}

$application->run();
